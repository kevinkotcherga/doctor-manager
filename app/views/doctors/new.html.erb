<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new Doctor</h3>
        <%= simple_form_for @doctor do |f| %>
          <%= f.input :first_name, placeholder: 'Henri' %>
          <%= f.input :last_name, placeholder: 'Dupont' %>
          <%= f.input :speciality, placeholder: 'Dentist' %>

          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
        <%= link_to 'Back', root_path, class: 'btn btn-flat' %>
      </div>
    </div>
  </div>
</div>
